<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx">

    <s:Rect left="0"
            right="0"
            top="0"
            bottom="0">
        <s:fill>
            <s:SolidColor color="#AA0011"/>
        </s:fill>
    </s:Rect>

    <s:Line yFrom="4"
            yTo="{this.height-4}"
            xFrom="4"
            xTo="{this.width-4}">
        <s:stroke>
            <s:SolidColorStroke color="#ffffff"
                                weight="2"/>
        </s:stroke>
    </s:Line>


    <s:Line yFrom="4"
            yTo="{this.height-4}"
            xFrom="{this.width-4}"
            xTo="4">
        <s:stroke>
            <s:SolidColorStroke color="#ffffff"
                                weight="2"/>
        </s:stroke>
    </s:Line>

</s:Group>
