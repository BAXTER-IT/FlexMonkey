<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Script>
        <![CDATA[
            [Bindable] public var total:String;
            [Bindable] public var current:String;
        ]]>
    </fx:Script>

    <s:Rect left="0"
            right="0"
            top="0"
            bottom="0"
            radiusX="3">
        <s:fill>
            <s:SolidColor color="#778899"/>
        </s:fill>
        <s:stroke>
            <s:SolidColorStroke color="#ffffff"
                                weight="1.5"/>
        </s:stroke>
    </s:Rect>

    <s:Label text="{current} of {total}"
             textAlign="center"
             fontSize="10"
             color="#ffffff"
             left="0"
             right="0"
             top="3.5"
             bottom="0"/>

</s:Group>
